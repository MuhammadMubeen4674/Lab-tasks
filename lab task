using namespace std; 
int main() { 
string name; 
int marks1, marks2, marks3, marks4, marks5; 
int totalMarks = 500;  
float percentage; 
// Input the student's name 
cout << "Your Name: "; 
cin >> name; 
// Input marks for each subject 
cout << "Enter subject 1 marks: "; 
cin >> marks1; 
cout << "Enter subject 2 marks: "; 
cin >> marks2; 
cout << "Enter subject 3 marks: "; 
cin >> marks3; 
cout << "Enter subject 4 marks: "; 
cin >> marks4; 
cout << "Enter subject 5 marks: "; 
cin >> marks5; 
// Calculate total marks obtained and percentage 
int obtainedMarks = marks1 + marks2 + marks3 + marks4 + marks5; 
percentage =(obtainedMarks / totalMarks)* 100; 
// Display the result 
cout << "\nStudent's Name: " << name << endl; 
cout << "Total Marks Obtained: " << obtainedMarks << "/" << totalMarks << endl; 
cout << "Percentage: " << percentage << "%" << endl; 
return 0; 
}
